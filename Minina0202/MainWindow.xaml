<Window x:Class="Minina0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minina0202"
        mc:Ignorable="d"
        Title="MainWindow" Height="524" Width="812">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="159*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,15" Background="#FF0E66BB">
            <Image Source="/images/logo.png" Width="31" Height="61" Margin="0,0,15,0">
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </Image>
            <TextBlock Text="Заявки" FontSize="30" FontWeight="Bold" Foreground="White" Height="45">
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </TextBlock>
        </StackPanel>

        <ListBox x:Name="RequestsListBox" Grid.Row="1" Margin="15,0,15,12" BorderThickness="1" Background="#FFC7C8D4">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" Margin="5" BorderBrush="#0C4882" BorderThickness="1" MouseLeftButtonDown="PartnerItem_MouseLeftButtonDown">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding PartnerType}" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text=" | " Margin="5,0"/>
                                    <TextBlock Text="{Binding PartnerName}" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>

                                <TextBlock Text="{Binding Address}" FontSize="12" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Phone}" FontSize="12" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding RatingText}" FontSize="12" FontWeight="SemiBold" Margin="0,2,0,0"/>
                            </StackPanel>

                            <Border Grid.Column="1" Padding="10" VerticalAlignment="Center" HorizontalAlignment="Right" Width="140">
                                <TextBlock Text="{Binding TotalCost, StringFormat={}{0:N2} руб.}" FontWeight="Bold" FontSize="13" TextAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,56,0,0"/>
        <Button x:Name="ViewProductsButton" Content="Каталог продукции" Click="ViewProductsButton_Click" Padding="20,10" FontWeight="Bold" Background="#FF0E66BB" Foreground="White" BorderThickness="0" Margin="624,3,20,12" Grid.Row="2"/>
        <Button x:Name="AddPartnerButton" Content="Управление заявками" Click="AddPartnerButton_Click" Padding="20,10" Margin="437,2,193,12" FontWeight="Bold" Background="#FF0E66BB" Foreground="White" BorderThickness="0" Grid.Row="2"/>
    </Grid>
</Window>
