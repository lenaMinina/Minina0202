<Window x:Class="Minina0202.MaterialCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minina0202"
        mc:Ignorable="d"
        Title="MaterialCalc" Height="682" Width="342">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="РАСЧЕТ МАТЕРИАЛОВ" FontSize="25" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20" Width="292"/>

        <TextBlock Grid.Row="1" Text="Продукция:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" x:Name="ProductNameTextBlock" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="3" Text="Требуемое количество:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" x:Name="RequiredCountTextBox" Padding="8" Margin="0,0,0,20" Height="30"/>

        <TextBlock Grid.Row="5" Text="Параметр 1:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" x:Name="Param1TextBox" Padding="8" Margin="0,0,0,20" Height="30"/>

        <TextBlock Grid.Row="7" Text="Параметр 2:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="8" x:Name="Param2TextBox" Padding="8" Margin="0,0,0,20" Height="30"/>

        <Border Grid.Row="9" Background="#FFC7C8D4" CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Результат расчета:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="ResultTextBlock" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CalculateButton" Content="Рассчитать" Click="CalculateButton_Click" Padding="25,12" FontWeight="Bold" Margin="0,0,15,0" Background="#FF0E66BB" Foreground="White" Width="159"/>
            <Button x:Name="CloseButton" Content="Закрыть" Click="CloseButton_Click" Padding="25,12" FontWeight="Bold" Background="#FF0E66BB" Foreground="White" Width="121"/>
        </StackPanel>
    </Grid>
</Window>
