<Window x:Class="Minina0202.PartnerEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minina0202"
        mc:Ignorable="d"
        Title="PartnerEdit" Height="800" Width="1100">
    <Grid Margin="20" Background="#FFC7C8D4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="632*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="18"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="ДАННЫЕ ПАРТНЕРА И ЗАЯВКИ" FontSize="30" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Right" Margin="0,0,578,15" Width="472" Grid.RowSpan="2" Grid.ColumnSpan="3" Height="36" VerticalAlignment="Bottom"/>

        <GroupBox Grid.Column="0" Header="Партнер" Padding="10" Margin="0,20,10,0" BorderBrush="#FF080045" Grid.Row="2">
            <StackPanel Orientation="Vertical" Height="555" HorizontalAlignment="Right" Width="381">

                <Label Content="Тип партнера:" FontWeight="SemiBold"/>
                <ComboBox x:Name="PartnerTypeComboBox" Margin="0,5,0,15"
                         DisplayMemberPath="Name" SelectedValuePath="ID"/>

                <Label Content="Наименование компании:" FontWeight="SemiBold"/>
                <TextBox x:Name="NameTextBox" Margin="0,5,0,15" Padding="5"/>

                <Label Content="ФИО директора:" FontWeight="SemiBold"/>
                <TextBox x:Name="DirectorTextBox" Margin="0,5,0,15" Padding="5"/>

                <Label Content="Юридический адрес:" FontWeight="SemiBold"/>
                <TextBox x:Name="AddressTextBox" Margin="0,5,0,15" Padding="5"/>

                <Label Content="Рейтинг:" FontWeight="SemiBold"/>
                <TextBox x:Name="RatingTextBox" Margin="0,5,0,15" Padding="5"/>

                <Label Content="Телефон:" FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,5,0,15" Padding="5"/>

                <Label Content="Email:" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,15" Padding="5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Column="2" Header="Заявка" Padding="10" Margin="10,20,0,0" BorderBrush="#FF080045" Grid.Row="2">
            <StackPanel Orientation="Vertical" Height="559">

                <Label Content="Продукция:" FontWeight="SemiBold" Height="29" Width="580"/>
                <ComboBox x:Name="ProductComboBox" Margin="0,5,0,15" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="ProductComboBox_SelectionChanged"/>

                <Label Content="Количество:" FontWeight="SemiBold"/>
                <TextBox x:Name="CountTextBox" Margin="0,5,0,15" Padding="5" Text="1"/>

                <Label Content="Минимальная стоимость за единицу:" FontWeight="SemiBold"/>
                <TextBlock x:Name="UnitCostTextBlock" Margin="0,5,0,15" Padding="5" FontWeight="Bold" Foreground="Black" Text="0.00 руб."/>

                <Button x:Name="AddProductButton" Content="Добавить продукт в заявку" Click="AddProductButton_Click" Padding="10,5" Margin="0,10,0,15" Background="#FF0E66BB" Foreground="White" FontWeight="Bold"/>

                <Label Content="Продукты в заявке:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DataGrid x:Name="ProductsDataGrid" Height="200" Margin="0,5,0,10" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Count}" Width="80"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding UnitCost, StringFormat={}{0:N2} руб.}" Width="100"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0:N2} руб.}" Width="120"/>
                        <DataGridTemplateColumn Header="" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Padding="5,2" Click="RemoveProductButton_Click" BorderThickness="0" FontSize="10"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Border Background="#FF0E66BB" Padding="10" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Общая стоимость заявки: " FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="TotalCostTextBlock" Text="0.00 руб." FontWeight="Bold" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Column="1" Width="500"/>
        <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Padding="20,10" FontWeight="Bold" Background="#FF797979" Foreground="White" BorderThickness="0" Margin="10,5,329,10" Grid.Row="3"/>
        <Button x:Name="SaveButton" Content="Сохранить заявку" Click="SaveButton_Click" Padding="20,10" FontWeight="Bold" Margin="352,8,122,7" Background="#FF0E66BB" Foreground="White" BorderThickness="0" Grid.Column="2" Grid.Row="3"/>
        <Button x:Name="DeleteButton" Content="Удалить заявку" Click="DeleteButton_Click" Padding="15,10" FontWeight="Bold" Margin="207,8,292,7" Background="#FF0E66BB" Foreground="White" BorderThickness="0" Grid.Column="2" Grid.Row="3"/>
    </Grid>
</Window>